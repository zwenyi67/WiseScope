@page
@model WiseScope_Razor.Pages.Categories.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> @* All Error message summary *@
        @* <div asp-validation-summary="ModelOnly"></div>  Only Model Error message summary *@
        @* <div asp-validation-summary="None"></div>  Not Display any Error message summary *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0 pb-2"></label>
            <input asp-for="Category.Name" disabled class="form-control bg-dark text-light" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0 pb-2"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control bg-pirmary text-light" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-outline-dark form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>
