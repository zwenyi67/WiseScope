@page
@model WiseScope_Razor.Pages.Categories.IndexModel
@{
    int count = 0;
}

<div class="container">
    <div class="row pt-4 mb-2">
        <div class="col-6">
            <div class="text-primary fs-4">
                Category List
            </div>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Category</a>
        </div>
    </div>

    <table class="table table-bordered table-responsive table-dark table-striped">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Display Order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(m => m.DisplayOrder))
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit" class="btn btn-info px-4 mx-2" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-page="/categories/delete" class="btn btn-danger px-3 mx-2" asp-route-id="@obj.Id"><i class="bi bi-trash3-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>